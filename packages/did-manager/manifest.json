{
  "manifest_version": 3,
  "name": "Decast ID Manager",
  "version": "2.4",
  "description": "üîê Manage and authenticate with decentralized identities (DIDs) on decast.live. Generate, restore, and sign securely.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "windows",
     "webNavigation"
  ],
  "host_permissions": [
    "https://decast.live/*" , "https://dev.decast.live/*" , "https://beta.live1.decast.live/*" , "http://localhost:8080/*" ,"https://beta.decast.live/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://decast.live/*", "https://dev.decast.live/*" , "https://beta.live1.decast.live/*" , "http://localhost:8080/*" ,"https://beta.decast.live/*"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://decast.live/*", "http://localhost:8080/*", "https://dev.decast.live/*", "https://beta.decast.live/*" , "https://beta.live1.decast.live/*" , "http://localhost:8080/*"], 
      "js": ["content.js"],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}